	name = Peter Horne
[core]
    excludesfile = /Users/peter/.gitignore
    editor = $EDITOR
[color]
	ui = true
[push]
	default = simple
[merge]
	tool = fugitive
	conflictstyle = diff3
[alias]
	up = pull --rebase
[alias]
    bump = commit --allow-empty -m 'Bump commit'
[alias]
	lg = log --graph --oneline --decorate
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[tag]
	sort = version:refname
[rerere]
	enabled = true
