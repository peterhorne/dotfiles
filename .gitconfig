[user]
	name = Peter Horne
[core]
    excludesfile = /Users/peter/.gitignore
    editor = nvim
[color]
	ui = true
[push]
	default = upstream
[merge]
	tool = vim_mergetool
	conflictstyle = diff3
[alias]
	up = pull --rebase
	lg = log --graph --oneline --decorate
  fixup = !sh -c 'git add \"$@\" && git commit --fixup $(git rev-list -1 HEAD -- \"$@\")' -
  done = !sh -c 'git checkout master && git branch -d \"$@\" && git up && git fetch -p' -
  squash = !sh -c 'GIT_SEQUENCE_EDITOR=: git rebase -i \"$1\" --autosquash' -
  amend = commit --amend
  wip = commit --no-verify -m WIP
  isolate = !sh -c 'git checkout -b \"$2\" origin/master --no-track && git cherry-pick \"$1\"' -
  shelve = !sh -c 'git branch -m \"$1\" archive/\"$1\"' -
[mergetool "vim_mergetool"]
  cmd = nvim -f -c \"MergetoolStart\" \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true
[tag]
	sort = version:refname
[rerere]
	enabled = true
[pager]
	branch = false
[rebase]
	autoSquash = true
[log]
	; date = relative
[credential]
	helper = osxkeychain
[mergetool]
	keepBackup = false
