[user]
	name = Peter Horne
[core]
    excludesfile = /Users/peter/.gitignore
    editor = nvim
[color]
	ui = true
[push]
	default = upstream
[merge]
	tool = fugitive
	conflictstyle = diff3
[alias]
	up = pull --rebase
	lg = log --graph --oneline --decorate
  fixup = !sh -c 'git add \"$@\" && git commit --fixup $(git rev-list -1 HEAD -- \"$@\")' -
  done = !sh -c 'git checkout master && git branch -d \"$@\" && git up && git fetch -p' -
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[tag]
	sort = version:refname
[rerere]
	enabled = true
[pager]
	branch = false
[rebase]
	autoSquash = true
[log]
	date = relative
